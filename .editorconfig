# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Spaces in coffee
[**.coffee]
indent_size = 2

[*.{js,ts,json}]
indent_size = 2

# Tabs in less
[*.css]
indent_size = 2

[**.html]
indent_style = tab
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.tsv]
indent_style = tab
