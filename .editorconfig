# This file is for unifying the coding style for different editors and IDEs
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,ts,json}]
indent_size = 2

[*.{scss,sass,less}]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.tsv]
indent_style = tab
