{
  "HTML template": {
    "prefix": "html",
    "body": [
      "<!doctype html>",
      "<html lang=\"${1}\">",
      "  <head>",
      "    <meta charset=\"UTF-8\" />",
      "    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1\" />",
      "    <title>${2}</title>",
      "    <link href=\"${3}\" rel=\"stylesheet\" />",
      "  </head>",
      "  <body>",
      "    ${0}",
      "    <script src=\"${4}\"></script>",
      "  </body>",
      "</html>"
    ]
  },
  "Script": { "prefix": "script", "body": "<script src=\"${1}\"></script>" },
  "Style": {
    "prefix": "style",
    "body": "<link rel=\"stylesheet\" href=\"${1}\">"
  },
  "Div": { "prefix": "div", "body": "<div class=\"${1}\">${0}</div>" },
  "Button": {
    "prefix": "btn",
    "body": "<button type=\"${1:button}\">${0}</button>"
  },
  "Input": {
    "prefix": "input",
    "body": "<input type=\"${1:text}\" name=\"${2}\" value=\"${3}\">"
  }
}
